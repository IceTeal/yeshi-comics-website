<!DOCTYPE html>
<html>
  <head>
    <title>Yeshi Comics</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %> 
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-6">
          <h1><%= link_to "Yeshi Comics", root_path %></h1>
        </div>
        <div class="col-xs-6 text-xs-right">
          <h1 class="cart-text"><%= render 'layouts/cart_text' %></h1>
        </div>
      </div>
      <nav class="navbar navbar-light bg-faded">
        <ul class="nav navbar-nav">
          <li class="nav-item">
            <%= link_to 'Home', root_path, :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Products', products_path, :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'About Us', about_us_path, :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Contact Us', contact_path, :class => "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Search', search_path, :class => "nav-link" %>
          </li>
        </ul>
      </nav> 
      <hr>
      <%= yield %>
    </div>
  </body>
</html>
